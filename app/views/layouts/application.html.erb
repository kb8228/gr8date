 <!DOCTYPE html>
<html>
<head>
  <title>Gr8date</title>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <link href='http://fonts.googleapis.com/css?family=Dosis' rel='stylesheet' type='text/css'>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container">
    <div>
      <% if logged_in? %>
      <div class="nav-thirds"><p>Hi, <%= current_user.name %> &nbsp; | &nbsp;<%= link_to 'My Page', user_path(current_user) %> &nbsp;| &nbsp;<%= link_to 'Log Out', logout_path, method: :delete %></p></div>
      <div class="nav-thirds"> <span id= "gr8date-logo"><h2> GR8DATE </h2></span> </div>
      <div class="nav-thirds"><span class= "nav navbar-nav navbar-right"> <%= link_to 'Plan a new date', new_plan_path %> </span></div>
      </p>
    </div>
  <% else %>
      <div class="nav-thirds">
        <%= link_to 'Log In', login_path %> | <%= link_to 'Sign up', new_user_path %>
      </div>
      <div class="nav-thirds"> <span id= "gr8date-logo"><h2> GR8DATE </h2></span> </div>    
    <% end %>
  </div>
</nav>

<%= yield %>

</body>
</html>