<!DOCTYPE html>
<html>
<head>
  <title>Gr8date</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if logged_in? %>
    <p>Hi, <%= current_user.name %> | <%= link_to 'Log Out', logout_path, method: :delete %></p>
  <% else %>
    <div>
      <%= link_to 'Log In', login_path %> | <%= link_to 'Sign up', new_user_path %>
    </div>    
  <% end %>

<%= yield %>

</body>
</html>
