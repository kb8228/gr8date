  <div>
    <%= f.label :date %>
    <%= f.date_field :date %>
  </div>

   <div>
    <%= f.label :location %>
    <%= f.text_field :location %>
  </div>

<label for="sel1">Select an event type:</label><br>
  <select class="input_medium" id="sel1">
   <%= options_for_select Event.categories %>
  </select>

<div>

<br>

  <%= f.submit "Plan my date!" %> 

<% end %>
















