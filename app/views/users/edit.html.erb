<div class="signupbox">
  <%= form_for @user do |f| %>

    <% if @user.errors.any? %>
      <div>
        <h4>So sorry, please fix <%= pluralize(@user.errors.count, "error") %>:</h4>
          <ul>
            <% @user.errors.full_messages.each do |msg| %>
              <li><%= msg.downcase %></li>
            <% end %>
          </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, :value => @user.name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :email %>
      <%= f.text_field :email, :value => @user.email, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, :placeholder => "new password", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, :placeholder => "retype new password", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit "Update my profile!", method: :patch, class: "btn btn-primary btn-lg" %>
    </div>  
  <% end %>
</div>